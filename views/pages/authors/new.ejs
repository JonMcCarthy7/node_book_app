<div class="row ">
  <div class=" col-md-12 ">
    <form action="/authors" method="post">
      <div class="col-md-6 mx-auto">
        <div class="form-group">
          <label for="title">Author Name</label>
          <input type="text" class="form-control" name="name" placeholder="Author Name">
        </div>
        <div class="form-group">
          <label for="img_url">Image of Book</label>
          <input type="text" class="form-control" name="img_url" placeholder="Image Url">
        </div>
        <div class="form-group">
          <label for="bio">Bio of Author</label>
          <textarea class="form-control" name="bio" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary col-md-12">Submit Author</button>
      </div>
    </form>
  </div>
</div>